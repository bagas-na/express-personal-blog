extends layout

block append head
  script(src='/javascripts/createArticle.js' defer)

block login
  div(class="h-0")

block content
  div(class="p-4 text-left min-h-48")
    h1(class="font-semibold text-2xl mb-4")= title
    form(name="createArticleForm" id="createArticleForm" class="space-y-3")
      div
        label(for="title" class="mr-auto") Article Title
        input(type="text" placeholder="Put your article title here" name="title" id="title" required min class="w-full px-2 py-1 border border-slate-600 rounded-lg")
      div
        label(for="dateTime" class="mr-auto") Publishing Date-time
        input(type="datetime-local" name="dateTime" id="dateTime" class="w-full px-2 py-1 border border-slate-600 rounded-lg")
      div
        label
        textarea(spellcheck="true" name="content" id="content" placeholder="Content" required minlength="10" maxlength="2000" class="w-full h-96 px-2 py-1 border border-slate-600 rounded-lg resize-none")

    div(class="mt-4 flex justify-evenly")
      a(class="inline-block py-2 px-4 bg-slate-200 rounded-md cursor-pointer hover:bg-slate-300 active:bg-slate-600 active:text-white" href="/admin") Back
      button(form="createArticleForm" type="submit" class="inline-block py-2 px-4 font-medium text-white bg-slate-500 text-center rounded-md hover:bg-slate-600 active:bg-slate-700 active:text-white" href="/admin/new") Submit



